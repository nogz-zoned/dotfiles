##
## Basic options
##

## Files ##
ncmpcpp_directory = "~/.ncmpcpp"
lyrics_directory = "~/.ncmpcpp/lyrics"
#execute_on_song_change = "~/.ncmpcpp/songchange.sh"

## Unsupported mouse ##
mouse_support = "yes"
mouse_list_scroll_whole_page = "no"

## Navigation ##
cyclic_scrolling = "yes"
header_text_scrolling = "yes"
jump_to_now_playing_song_at_start = "yes"
lines_scrolled = "2"

## Other ##
system_encoding = "utf-8"
regular_expressions = "extended"


##
## Appearance
##

## Interface'n'Columns ##
user_interface = "classic"
#song_list_format = "{$3%N$9} {$5%a - %t$9}$R{$7%b$9}"
song_columns_list_format = "(50)[red]{a} (50)[blue]{t|f} (4f)[cyan]{l}"
song_list_format = "$5 %a $R $2 %t $7 %l"
default_place_to_search_in = "database"
song_status_format = {{$5%a - $9$7{%t}}$9}{ $7(%b)$9}

## I dont't like columns ##
playlist_display_mode = "classic"
browser_display_mode = "classic"
search_engine_display_mode = "classic"

## Colots of another elements ##
header_window_color = "blue"
volume_color = "blue"
state_line_color = "blue"
state_flags_color = "blue"
main_window_color = "blue"
main_window_highlight_color = "blue"
progressbar_elapsed_color = "blue"
statusbar_color = "blue"
active_column_color = "yellow"

## Selected tracks ##
selected_item_prefix = "* "
discard_colors_if_item_is_selected = "no"

## Seeking ##
incremental_seeking = "yes"
seek_time = "1"

## Visivility ##
header_visibility = "yes"
statusbar_visibility = "yes"
titles_visibility = "yes"

## Other ##
now_playing_prefix = "$b"
progressbar_look = "───"
colors_enabled = "yes"
autocenter_mode = "yes"
centered_cursor = "yes"
